<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<resultMap type="com.javaex.vo.UserVo" id="resultMapUserVo">
		<result column="no" property="no"></result>
		<result column="name" property="name"></result>
		<result column="id" property="id"></result>
		<result column="password" property="password"></result>
		<result column="gender" property="gender"></result>
	</resultMap>

	<select id="selectByIdPw" parameterType="com.javaex.vo.UserVo" resultMap="resultMapUserVo">
		<![CDATA[	
			select no, name, id, password, gender
			from users
			where id=#{id} and password=#{password}
		]]>
	</select>

	<insert id="insert" parameterType="com.javaex.vo.UserVo">
		<![CDATA[	
			insert into users
			values (null, #{id}, #{password}, #{name}, #{gender});
		]]>
	</insert>

	<update id="update" parameterType="com.javaex.vo.UserVo">
		<![CDATA[	
			update users
			set password= #{password}, name =  #{name}, gender= #{gender}
			where no=#{no};
		]]>
	</update>

</mapper>
